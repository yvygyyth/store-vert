{
    "name": "store-vert",
    "version": "0.2.0",
    "description": "A type-safe, extensible storage library with unified API supporting Memory, LocalStorage, SessionStorage, and IndexedDB",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "engines": {
        "node": ">=22.0.0",
        "npm": ">=9.0.0",
        "pnpm": ">=8.0.0"
    },
    "files": [
        "dist",
        "package.json",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "npm run lint && npm run test && npm run build",
        "prepare": "husky",
        "test:browser": "vitest --config=vitest.config.ts"
    },
    "keywords": [
        "storage",
        "localstorage",
        "sessionstorage",
        "indexeddb",
        "memory",
        "store",
        "typescript",
        "type-safe",
        "unified-api",
        "extensible",
        "registry",
        "browser",
        "persistence"
    ],
    "author": {
        "name": "yvygyyth",
        "email": "1589937631@qq.com"
    },
    "license": "MIT",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.esm.js",
            "require": "./dist/index.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.4.0",
        "@types/node": "^24.10.0",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@typescript-eslint/parser": "^8.46.3",
        "@vitest/browser-playwright": "4.0.7",
        "@vitest/ui": "4.0.7",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "globals": "16.5.0",
        "happy-dom": "20.0.10",
        "husky": "9.1.7",
        "jsdom": "^27.1.0",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "vite": "^7.2.1",
        "vite-plugin-dts": "4.5.4",
        "vitest": "^4.0.7"
    }
}
